<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:transitionGroup="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text= "@string/app_name"
            android:padding="10dp"
            android:textSize="30sp"
            android:backgroundTint="#fffef9ff"
            android:textColor="#ffff9c6f"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="Product Detail"
            android:padding="10dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:contentDescription="app image"
                android:background="#ff66ff36" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/appDetailTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="62dp"
                    android:padding="10dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="App Name"/>

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="fill_parent"
                    android:layout_height="62dp"
                    android:padding="10dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:text="Rating" />

            </LinearLayout>
         </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/desc"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_span="2"
                android:text="Description"
                android:background="#93060806"
                android:textColor="#fffdfff8" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lblType"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:padding="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="Type"/>

            <TextView
                android:id="@+id/appType"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="App Type" />
            </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lblInApp"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:padding="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="In-app Purchase"/>

            <TextView
                android:id="@+id/inapppurchase"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="App Type" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lblUpdated"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:padding="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="Last Updated"/>

            <TextView
                android:id="@+id/lastUpdated"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:text="Date" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Store"
        android:id="@+id/btnAppStore"
        android:background="#ff78d0ff"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:clickable="true"
        android:padding="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/shareTo"
        android:background="#ff78d0ff"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:clickable="true"
        android:padding="15dp" />

</LinearLayout>